<h1 class="text-center mb-4">Contact Us</h1>

<div class="row justify-content-center">
  <div class="col-md-9 col-lg-7 d-flex flex-column gap-4">
    <% @contacts.each_slice(2) do |contacts_slice| %>
      <div class="row justify-content-end gap-4">
        <% contacts_slice.each do |contact| %>
          <div class="col-md-5">
            <h2 class="mb-3"><%= contact.title %></h2>
            <p><b>Email:</b> <%= contact.email %></p>
            <p><b>Phone:</b> <%= contact.phone %></p>
          </div>
        <% end %>

        <% if contacts_slice.size == 1 %>
          <div class="col-md-5"></div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
