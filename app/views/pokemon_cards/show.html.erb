<h1 class="text-center mb-4"><%= @pokemon_card.name.capitalize %></h1>

<div class="row justify-content-center g-4">
  <div class="col-md-4 text-center">
    <%= image_tag @pokemon_card.image, class: 'img-responsive w-75', alt: @pokemon_card.name %>
  </div>

  <div class="col-md-4 px-5">
    <p><b>Type:</b> <%= @pokemon_card.type.name %></p>
    <p><b>Description:</b> <%= @pokemon_card.description %></p>
    <p><b>Stock Quantity:</b> <%= @pokemon_card.stock_quantity %></p>
    <p><b>Price:</b> $<%= '%.2f' % @pokemon_card.price %></p>
  </div>
</div>
